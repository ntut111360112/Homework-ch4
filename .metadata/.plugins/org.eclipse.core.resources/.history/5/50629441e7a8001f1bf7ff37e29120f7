package whch4;

public class sample4_8
{
	public static void main(String[] args)
	{
		Car8 car1=new Car();
		Car8 car2=new Car();
		Car8 car3;
		car3 = car1;

		System.out.println();
	}
}
class Car8
{
	protected int num;
	protected double gas;
	public Car8()
	{
		num=0;
		gas=0.0;
		System.out.println("生產了車子");
	}
	public void setCar8(int n, double g)
	{
		num=n;
		gas=g;
		System.out.println("將車號設為"+num+"，汽油量設為"+gas);
	}
	public String toString()
	{
		String str ="車號."+num+",汽車量:"+gas;
		return str;
	}
}